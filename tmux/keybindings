# change the prefix key
set-option -g   prefix C-space
bind-key C-space    send-prefix

# vim mode keys
setw -g mode-keys vi

# session management
bind S choose-session
bind N command-prompt -p session-name "new-session -ADs %1"

# create new window, use current path
bind c new-window -c "#{pane_current_path}"

# vim-like create split panes
bind s split-window -v -c "#{pane_current_path}"
bind v split-window -h -c "#{pane_current_path}"

# vim-like pane selection
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# vim-like pane resizing
bind -r C-H resize-pane -L 5
bind -r C-J resize-pane -D 5
bind -r C-K resize-pane -U 5
bind -r C-L resize-pane -R 5

# vim-like window reoordering
bind -r C-p swap-window -t -1
bind -r C-n swap-window -t +1

# vim-like copy & paste
bind -T copy-mode-vi v send -X begin-selection
bind -T copy-mode-vi C-c send -X clear-selection
bind -T copy-mode-vi Space send -X page-down
bind -T copy-mode-vi C-v send -X rectangle-toggle
bind -T copy-mode-vi C-a send -X start-of-line
bind -T copy-mode-vi C-e send -X end-of-line
bind -T copy-mode-vi y send -X copy-selection
