#!/bin/bash

if hash gsettings 2>/dev/null
then
    gsettings set org.compiz.core:/org/compiz/profiles/unity/plugins/core/ hsize 6
    gsettings set org.compiz.core:/org/compiz/profiles/unity/plugins/core/ vsize 1
    gsettings set org.compiz.unityshell:/org/compiz/profiles/unity/plugins/unityshell/ launcher-hide-mode 1
fi

if hash gconftool-2 2>/dev/null
then
    gconftool-2 -s /apps/gnome-terminal/global/use_mnemonics -t bool false
fi

OPEN="$HOME/.bin/open"
cat << EOF > "$OPEN"
#!/bin/bash
exec xdg-open \$*
EOF
chmod 755 "$OPEN"
